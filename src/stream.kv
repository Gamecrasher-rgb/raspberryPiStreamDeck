#:kivy 1.0.9

<MainWindow>:    
    canvas:
        Rectangle:
            pos: 0, self.height /4
            size: self.width, 3
        Rectangle:
            pos: 0, self.height * 2/4
            size: self.width, 3
        Rectangle:
            pos: 0, self.height * 3/4
            size: self.width, 3
        Rectangle:
            pos: 0, self.height
            size: self.width, 3
        
        Rectangle:
            pos: self.width /5, 0
            size: 3, self.height * 3/4
        Rectangle:
            pos: self.width * 2/5, 0
            size: 3, self.height * 3/4
        Rectangle:
            pos: self.width * 3/5, 0
            size: 3, self.height * 3/4
        Rectangle:
            pos: self.width * 4/5, 0
            size: 3, self.height * 3/4
        Rectangle:
            pos: self.width * 5/5, 0
            size: 3, self.height * 3/4
    Label:
        font_size: "50"
        center_x: root.width / 2
        top: root.height
        text: "Stream Deck"